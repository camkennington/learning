--IMPLICIT INNER JOIN-----

SELECT first_name, last_name, order_date, amount
FROM customers, orders 
WHERE customers.id = orders.customer_id;

----- EXPLICIT INNER JOIN ----

SELECT first_name, last_name, order_date, amount 
FROM customers
JOIN orders
	ON customers.id = orders.id;
